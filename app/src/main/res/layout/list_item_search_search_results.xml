<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewSrchResListImg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@color/colorGrey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
    android:orientation="horizontal"
    android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="vertical">

        <TextView
            android:id="@+id/textViewSrchResListItmName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name : "
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />
            <TextView
                android:id="@+id/textViewSrchResListItmName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name : "
                android:textColor="@android:color/background_dark"
                android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewSrchResListItmMatchSec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:text="Matches attribute : "
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />
            <TextView
                android:id="@+id/textViewSrchResListItmMatchSec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:text="Matches attribute : "
                android:textColor="@android:color/background_dark"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textViewSrchResListItmDiff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:text="Diff : "
                android:textColor="@android:color/background_dark"
                android:textSize="24sp" />

        </LinearLayout>

    <Button
        android:id="@+id/buttonSrchResListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="7dp"
        android:background="@drawable/buttonshapemenu"
        android:text="View" />
        <Button
            android:id="@+id/buttonSrchResListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:text="View" />
    </LinearLayout>

    <!--android:singleLine Kept for better readability-->


</LinearLayout>