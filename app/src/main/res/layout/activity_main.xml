<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ml.alohomora.plantlocationandidentification.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMinGreen">

        <ImageView
            android:id="@+id/imageviewMenuprofilepicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            app:srcCompat="@drawable/imghomeprofilepicture" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textviewMenuUsername"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:gravity="center_vertical"
                android:text="Sushruta"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewMenuUserTagline"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Novice"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:text="Identify a plant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonMenuIdentifyPlnt" />

    <Button
        android:text="Search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonMenuSearchPlnt" />

    <Button
        android:text="Geotag a found plant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonMenuGeotag" />

    <Button
        android:text="Show nearby plants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonMenuShowNearbyPlants" />

    <Button
        android:text="Add a new plant to database"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonMenuAddNewPlntTDb" />

    <Button
        android:text="Verify submitted entries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonMenuVerifyEntries" />
</LinearLayout>